#!/usr/bin/env ruby
# -*- ruby -*-

$: << File.expand_path("../../lib", __FILE__)
require 'rort'

active = Rort::Models::Respondent.filter {!:slug.nil?}

Rort.logger(:warmup).info "Started warmup for #{active.count} requestors"

active.each do |res|
  Rort::Models::Person.fetch(res.slug).favorites.each do |fav|
    if Rort::Cache[fav.slug + ':activities']
      Rort::Cache.del(fav.slug + ':activities')
    end
    Rort::Queue.push(fav.slug)
  end
end

